@model List<Proiect_DAW.Models.ProductOrder>

<style>
    .container {
        background-color: #f9f1fc; 
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #8e44ad; 
        font-family: 'Arial', sans-serif;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table th, table td {
        padding: 12px;
        text-align: center;
    }

    thead {
        background-color: #9b59b6; 
        color: white;
        font-weight: bold;
    }

    tbody tr:nth-child(even) {
        background-color: #f1e6f4; 
    }

    tbody tr:nth-child(odd) {
        background-color: #ffffff; 
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #e74c3c; 
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b; 
    }

    .btn-success {
        background-color: #8e44ad; 
        color: white;
    }

    .btn-success:hover {
        background-color: #7d3c8c; 
    }

    p {
        font-size: 18px;
        text-align: center;
        color: #8e44ad;
        font-weight: bold;
    }
</style>

<div class="container my-5">
    <h2>Coșul meu</h2>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th>Cantitate</th>
                    <th>Preț</th>
                    <th>Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Title</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product.Price * item.Quantity) RON</td>
                        <td>
                            <form method="post" asp-action="RemoveFromCart">
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <input type="hidden" name="orderId" value="@item.OrderId" />
                                <button class="btn btn-danger" type="submit">Șterge</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <form method="post" asp-action="PlaceOrder">
            <button class="btn btn-success" type="submit">Plasează Comanda</button>
        </form>
    }
    else
    {
        <p>Coșul tău este gol.</p>
    }
</div>
