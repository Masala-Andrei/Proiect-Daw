@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-5">
    <h2>Manage Users</h2>

    @if (TempData["message"] != null)
    {
        <div class="alert @TempData["messageType"]">
            @TempData["message"]
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.UsersList)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Show", "ManageUsers", new { id = user.Id })" class="btn btn-info">View Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* General Container Styling */
    .container {
        background-color: #f9f1fc; /* Light purple background */
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Title Styling */
    h2 {
        color: #8e44ad; /* Dark purple for the title */
        font-family: 'Arial', sans-serif;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        table th, table td {
            padding: 12px;
            text-align: center;
        }

    /* Table Header Styling */
    thead {
        background-color: #9b59b6; /* Lighter purple for the header */
        color: white;
        font-weight: bold;
    }

    /* Table Row Styling */
    tbody tr:nth-child(even) {
        background-color: #f1e6f4; /* Light lavender for even rows */
    }

    tbody tr:nth-child(odd) {
        background-color: #ffffff; /* White for odd rows */
    }

    /* Button Styling */
    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

    .btn-info {
        background-color: #3498db; /* Blue for the "View Roles" button */
        color: white;
    }

        .btn-info:hover {
            background-color: #2980b9; /* Darker blue on hover */
        }

    /* Alert Styling */
    .alert {
        font-size: 14px;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
        text-align: center;
    }

        .alert.alert-success {
            background-color: #d4edda; /* Light green background for success */
            color: #155724;
        }

        .alert.alert-danger {
            background-color: #f8d7da; /* Light red background for danger */
            color: #721c24;
        }
</style>