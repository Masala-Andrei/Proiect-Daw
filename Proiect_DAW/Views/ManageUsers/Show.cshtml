@model Proiect_DAW.Models.ApplicationUser
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container my-5">
    <h2>User Details: @Model.UserName</h2>
    <p><strong>Email:</strong> @Model.Email</p>

    <h3>Roles</h3>
    <ul class="list-group">
        @foreach (var role in ViewBag.Roles)
        {
            <li class="list-group-item">@role</li>
        }
    </ul>

    <h3>Manage Roles</h3>
    <form method="post" asp-action="ManageUserRole">
        <input type="hidden" name="userId" value="@Model.Id" />
        <div class="form-group">
            <label for="selectedRole">Select Role</label>
            <select id="selectedRole" name="selectedRole" class="form-select">
                <option value="">Delete Role</option>
                @foreach (var role in ViewBag.AllRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Update Role</button>
    </form>

    <br />
    <a href="@Url.Action("Index", "ManageUsers")" class="btn btn-secondary">Back to User List</a>
</div>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"]">
        @TempData["message"]
    </div>
}

<style>
    /* General Container Styling */
    .container {
        background-color: #f9f1fc; /* Light purple background */
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Title Styling */
    h2, h3 {
        color: #8e44ad; /* Dark purple for the title */
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
    }

    /* List Group Styling for Roles */
    .list-group-item {
        font-size: 16px;
    }

    .badge.bg-info {
        background-color: #3498db; /* Blue badge for roles */
    }

    /* Button Styling */
    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #8e44ad; /* Dark purple for the button */
        color: white;
    }

        .btn-primary:hover {
            background-color: #7d3c8c; /* Darker purple on hover */
        }

    .btn-secondary {
        background-color: #95a5a6; /* Gray for back button */
        color: white;
    }

        .btn-secondary:hover {
            background-color: #7f8c8d; /* Darker gray on hover */
        }

    /* Alert Styling */
    .alert {
        font-size: 14px;
        padding: 15px;
        margin-top: 20px;
        border-radius: 5px;
        text-align: center;
    }

        .alert.alert-success {
            background-color: #d4edda; /* Light green background for success */
            color: #155724;
        }

        .alert.alert-danger {
            background-color: #f8d7da; /* Light red background for danger */
            color: #721c24;
        }
</style>