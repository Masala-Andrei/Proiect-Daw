@model Proiect_DAW.Models.ApplicationUser
@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="container my-5">
    <h2>User Details: @Model.UserName</h2>
    <p><strong>Email:</strong> @Model.Email</p>

    <h3>Roles</h3>
    <ul class="list-group">
        @foreach (var role in ViewBag.Roles)
        {
            <li class="list-group-item">@role</li>
        }
    </ul>

    <h3>Manage Roles</h3>
    <form method="post" asp-action="ManageUserRole">
        <input type="hidden" name="userId" value="@Model.Id" />
        <div class="form-group">
            <label for="selectedRole">Select Role</label>
            <select id="selectedRole" name="selectedRole" class="form-select">
                <option value="">Delete Role</option>
                @foreach (var role in ViewBag.AllRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Update Role</button>
    </form>

    <br />
    <a href="@Url.Action("Index", "ManageUsers")" class="btn btn-secondary">Back to User List</a>
</div>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"]">
        @TempData["message"]
    </div>
}
