@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MiAn Market</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background: linear-gradient(to bottom, #FFF3E0, #FFE0B2, #FFCC80);
            color: #444;
        }

        .hero-section {
            padding: 50px 20px;
            background: linear-gradient(to right, #FFB74D, #FF8A65);
            border-bottom-left-radius: 50% 15%;
            border-bottom-right-radius: 50% 15%;
            color: #FFFFFF;
        }

        .logo h1 {
            font-size: 2.8rem;
            font-family: 'Georgia', serif;
            color: #FF7043;
            margin-bottom: 10px;
        }

        .tagline {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .cta-button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 25px;
            font-size: 1rem;
            color: #FFFFFF;
            background-color: #FF7043;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .cta-button:hover {
                background-color: #F4511E;
            }

        .feature-card {
            background: #FFFFFF;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

            .feature-card h3 {
                color: #FF7043;
            }

        footer {
            background-color: #FFE0B2;
            color: #333;
            padding: 10px 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <header class="hero-section text-center">
            <div class="logo">
                <h1>MiAn Market</h1>
            </div>
            <h2 class="tagline">Discover Unique Handmade Creations</h2>
            <a href="/Products/Index" class="btn cta-button">Shop Now</a>
        </header>

        <main class="container my-5">
            <div class="row justify-content-center g-4">
                <div class="col-md-4">
                    <div class="card feature-card text-center p-3">
                        <h3>100% Handmade</h3>
                        <p>Crafted with love and care, every item is unique and special.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card text-center p-3">
                        <h3>Worldwide Shipping</h3>
                        <p>We deliver your favorite products wherever you are.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card text-center p-3">
                        <h3>Secure Payment</h3>
                        <p>Shop with confidence using our trusted payment options.</p>
                    </div>
                </div>
            </div>
        </main>

        <footer class="text-center">
            <p>&copy; 2024 MiAn Market. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
