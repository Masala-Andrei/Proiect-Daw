@model IEnumerable<Product>

<h1>Produse Nevalidate</h1>

@if (TempData["message"] != null)
{
    <div class="alert @TempData["messageType"]">@TempData["message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Titlu</th>
            <th>Descriere</th>
            <th>Categorie</th>
            <th>Actiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Description</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <form asp-action="ValidateProduct" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-success">Valideaza</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
