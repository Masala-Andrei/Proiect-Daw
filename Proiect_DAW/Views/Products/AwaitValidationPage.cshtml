@if (ViewBag.Message != null)
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Notificare</h4>
        <p>@ViewBag.Message</p>
    </div>
}

<a href="@Url.Action("Index", "Products")" class="btn btn-primary">Înapoi la produse</a>

<style>
    .alert-info {
        background-color: #f3e5f5; 
        color: #6a1b9a; 
        border-color: #e1bee7; 
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

        .alert-info .alert-heading {
            font-size: 18px;
            color: #6a1b9a; 
            font-weight: bold;
        }

        .alert-info p {
            font-size: 16px;
            color: #6a1b9a; 
        }

    .btn-primary {
        background-color: #8e44ad; 
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #7d3c8c; 
        }

    .btn-primary {
        display: block;
        margin: 0 auto;
    }
</style>
