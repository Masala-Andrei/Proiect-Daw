<div class="container my-5">
    <!-- Card Detalii Produs -->
    <div class="card mb-4 shadow" style="background-color: #FFF3E0;">
        <div class="card-header text-white" style="background-color: #FFB74D;">
            <h5>Detalii Produs</h5>
        </div>
        <div class="card-body text-warning" style="color: #FF7043;">
            <h5 class="mb-3"><strong>@Model.Title</strong></h5>
            <p><strong>Descriere:</strong> @Model.Description</p>
            <p><strong>Categorie:</strong> @Model.Category.CategoryName</p> <!-- Modificat pentru a arăta categoria corectă -->


            <p><strong>Preț:</strong> @Model.Price RON</p>
            <p>
                <strong>Rating :</strong>
                @if (Model.Rating > 0)
                {
                    <span class="text-success">@Model.Rating.ToString("0.0") / 5</span>
                }
                else
                {
                    <span class="text-muted">Niciun rating</span>
                }
            </p>
        </div>

        <!-- Formular pentru Adăugarea în Coș -->
        <div class="card-footer text-end" style="background-color: #FFE0B2;">
            <form method="post" asp-action="AddToCart" asp-controller="Products">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group d-inline-block me-2">
                    <label for="quantity" class="form-label">Cantitate:</label>
                    <input type="number" id="quantity" name="quantity" class="form-control d-inline-block" min="1" max="@Model.Stock" value="1" required style="width: 80px;" />
                </div>
                <button class="btn btn-success" type="submit">Adaugă în Coș</button>
            </form>
        </div>

        @if ((ViewBag.AfisareButoane == true && Model.UserId == ViewBag.UserCurent)
        || ViewBag.EsteAdmin == true)
        {
            <div class="card-footer text-end" style="background-color: #FFE0B2;">
                <a class="btn btn-warning text-white me-2" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Editează produs</a>
                <form method="post" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id" style="display: inline;">
                    <button class="btn btn-danger" type="submit">Șterge produs</button>
                </form>
            </div>
        }
    </div>

    <!-- Card Rating --> 
     <div class="card shadow" style="background-color: #F3E5F5;"> 
        <div class="card-header text-white" style="background-color: #8E24AA;"> 
            <h5>Adaugă sau Vizualizează Rating-uri</h5> 
        </div> 
         <div class="card-body"> 
            <h6 class="mb-3">Adaugă un rating:</h6> 
           <form asp-action="AddRating" asp-controller="Products" method="post"> 
                <input type="hidden" name="ProductId" value="@Model.Id" /> 
                <div class="mb-3"> 
                   <label for="RatingInput" class="form-label">Rating (1-5):</label> 
                     <input type="number" id="RatingInput" name="Number" class="form-control" min="1" max="5" required /> 
                </div> 
                <button type="submit" class="btn btn-primary">Trimite Rating</button> 
           </form> 

             <hr /> 
         </div> 
     </div> 
 </div>


    <!-- Listă Recenzii -->
    <h4 class="mt-4 text-warning" style="color: #FF7043;">Recenzii</h4>
    @foreach (var comm in Model.Reviews)
    {
        <div class="card mb-3 shadow-sm" style="background-color: #FFF8E1;">
            <div class="card-body text-warning" style="color: #FF7043;">
                <p class="mb-1">@comm.Content</p>
                <small class="text-muted d-block">@comm.Date</small>
                <strong><i class="bi bi-person-fill"></i> @comm.User.UserName</strong>
                @if (comm.UserId == ViewBag.UserCurent || ViewBag.EsteAdmin == true)
                {
                    <div class="mt-3">
                        <a class="btn btn-outline-warning me-2" asp-controller="Reviews" asp-action="Edit" asp-route-id="@comm.Id">
                            <i class="bi bi-pencil-square"></i> Editează
                        </a>
                        <form method="post" asp-controller="Reviews" asp-action="Delete" asp-route-id="@comm.Id" style="display: inline;">
                            <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i> Șterge</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Formular Adăugare Review -->
    <div class="card mt-4 shadow" style="background-color: #FFF3E0;">
        <div class="card-header text-white" style="background-color: #FFB74D;">

            <h5>Adaugă un review</h5>
        </div>
        <div class="card-body text-warning" style="color: #FF7043;">
            <form method="post" asp-controller="Products" asp-action="Show">
                <input type="hidden" name="ProductId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="reviewContent" class="form-label">Conținut review</label>
                    <textarea id="reviewContent" class="form-control" name="Content" rows="3" style="background-color: #FFE0B2;"></textarea>
                </div>
                <button class="btn btn-warning text-white" type="submit">Adaugă comentariul</button>
            </form>
        </div>
    </div>
</div>
